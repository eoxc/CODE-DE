<div class="modal-dialog modal-lg" style="height: calc(100% - 20px); width: -moz-calc(100% - 20px); width: -webkit-calc(100% - 20px); width: -o-calc(100% - 20px); width: calc(100% - 20px); margin: 10px;" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      {{#if hasMore}}
      <span class="record-pager">
        <a class="btn btn-default btn-xs records-prev">
          <i class="fas fa-angle-double-left" aria-hidden="true"></i>
        </a>
        <span class="current-record"></span> / <span class="record-count"></span>
        <a class="btn btn-default btn-xs records-next">
          <i class="fas fa-angle-double-right" aria-hidden="true"></i>
        </a>
        <label style="margin-left:10px;cursor:pointer;">
          {{t 'Keep zoom level'}}
          <input type="checkbox" class="keepZoom" {{#if keepZoom}}checked{{/if}} style="top:2px;position:relative;">
        </label>
      </span>
      {{/if}}
      <button class="btn btn-sm btn-default layer-options"><i class="fas fa-wrench"></i></button>
      <h4 class="modal-title" style="display:inline"></h4>
    </div>
    <div class="modal-body"></div>
    <div class="modal-footer">
      <span class="buttons checkbox">
        <label>
          <input type="checkbox" class="is-selected"> {{t 'Selected for Download' }}
        </label>
        <button type="button" class="btn btn-default" data-dismiss="modal">{{t 'Close' }}</button>
      </span>
    </div>
  </div>
</div>
